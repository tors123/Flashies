<!--This is a basic form template that can be used for creating new flashcards or editing flashcards 
	(it is a "partial view" that can be reused throughout the application)-->
<%= form_for @flashcard do |f| %>
 	<!-- Check if there were any errors in the subminted new flashcard. If there were, display them -->
	<%= render 'shared/error_messages', object: f.object %>
  	<p>  
    	<%= f.label :Topic %><br>
    	<%= f.text_field :title %>
  	</p>
 
  	<p>
    	<%= f.label :Question %><br>
    	<%= f.text_area :question %>
  	</p>
  	
  	<p>
    	<%= f.label :Answer %><br>
    	<%= f.text_area :answer %>
  	</p>
  	
  	<p>
      <%= f.label :Make_Public? %>
      <%= f.check_box :public %>
    </p>
 
  	<p>
    	<%= f.submit %>
  	</p>
<% end %>