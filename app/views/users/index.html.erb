<!--Provide a title-->
<% provide(:title, 'All Users')%>


<!--List all users-->
<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show User', user %></td>
        <td><%= link_to 'Edit User', edit_user_path(user) %></td>
        <td><%= link_to 'Remove User', user, method: :delete, data: { confirm: 'Are you sure you want to remove this user?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

